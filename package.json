{	
	"name": "terminal-macros",
	"displayName": "Terminal Macros",
	"description": "Do anything with the terminal without needing to touch the terminal.",
	"version": "1.0.0",
	"publisher": "RobbyCBennett",
	"repository": {
		"type": "git",
		"url": "https://github.com/RobbyCBennett/VSCodeTerminalMacros.git"
	},
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:terminalMacros.executeCommand"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "terminalMacros.executeCommand",
				"title": "Execute Command in Terminal"
			}
		],
		"configuration": {
			"title": "Terminal Macros",
			"properties": {
				"Commands": {
					"type": "array",
					"items": {
						"type": [
							"object"
						],
						"properties": {
							"group": {
								"type": "string",
								"description": "Commands sharing the group name will be grouped together in the menu."
							},
							"name": {
								"type": "string",
								"description": "Name for the command. A human readable string which is rendered prominent."
							},
							"command": {
								"type": "string",
								"description": "The command to send to the terminal. Variables: {recent}, {file}, {paste}"
							},
							"save": {
								"type": "boolean",
								"description": "Whether to save the current file before opening the terminal."
							},
							"clear": {
								"type": "boolean",
								"description": "Whether to clear the line inserting the command."
							},
							"execute": {
								"type": "boolean",
								"description": "Whether to run the command immediately."
							}
						}
					},
					"default": [
						{
							"group": "General",
							"name": "Last Command",
							"command": "{recent}",
							"save": true,
							"clear": true,
							"execute": true,
							"focus": false
						},
						{
							"group": "General",
							"name": "Run File",
							"command": "./{file}",
							"save": true,
							"clear": true,
							"execute": true,
							"focus": false
						},
						{
							"group": "General",
							"name": "Paste",
							"command": "{paste}",
							"save": true,
							"clear": true,
							"execute": true,
							"focus": false
						},
						{
							"group": "JavaScript",
							"name": "Node",
							"command": "npm start",
							"save": true,
							"clear": true,
							"execute": true,
							"focus": false
						},
						{
							"group": "C/C++",
							"name": "make",
							"command": "Make",
							"save": true,
							"clear": true,
							"execute": true,
							"focus": false
						}
					]
				}
			}
		}
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
    }
}
